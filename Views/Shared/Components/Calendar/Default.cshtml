@using StortfordArchers.Models.ViewModels

@model CalendarIdViewModel

@if (Model.CalendarBlockId == Guid.Empty || Model.PageId == Guid.Empty)
{
    return;
}

<script type="module" src="/js/Calendar.js" asp-append-version="true"></script>

<div class="width-full medium-bottom-margin align-center large-calendar">
    <div class="medium-padding align-center">
        <div class="inline-block"><img id="prev-month-large-calendar" src="/assets/left-arrow-6420.svg" class="small-right-margin" width="30px" alt="Left arrow icon" style="cursor: pointer;" /></div>
        <div class="inline-block small-top-padding large-right-padding"><span id="prev-month-name" class="text-xlarge ThemeB2 large-right-margin" style="cursor: pointer;"></span></div>
        <div class="inline-block"><span id="month-name" class="ThemeB2 text-header-2 margin-large-right"></span></div>
        <div class="inline-block small-top-padding large-left-padding"><span id="next-month-name" class="text-xlarge ThemeB2" style="cursor: pointer;"></span></div>
        <div class="inline-block"><img id="next-month-large-calendar" class="small-left-margin" src="/assets/right-arrow-6421.svg" width="30px" alt="Right arrow icon" style="cursor: pointer;" /></div>
        <div class="float-clear"></div>
        <input id="prev-month-value" type="hidden" value="" />
        <input id="next-month-value" type="hidden" value="" />
    </div>
</div>

<article class="width-full small-bottom-margin large-calendar-header">
    <ul>
        <li class="ThemeB2Bg medium-right-margin float-left align-center bold">Mon</li>
        <li class="ThemeB2Bg medium-right-margin float-left align-center bold">Tue</li>
        <li class="ThemeB2Bg medium-right-margin float-left align-center bold">Wed</li>
        <li class="ThemeB2Bg medium-right-margin float-left align-center bold">Thu</li>
        <li class="ThemeB2Bg medium-right-margin float-left align-center bold">Fri</li>
        <li class="ThemeA4Bg medium-right-margin float-left align-center bold">Sat</li>
        <li class="ThemeA4Bg float-left align-center bold">Sun</li>
    </ul>
    <section class="float-clear"></section>
</article>

<div class="align-center spinner">
    <img src="/assets/ajax-loader.gif" />
</div>
<div class="width-full small-top-padding">
    <div id="large-calendar-placeholder">
    </div>
</div>

<input type="hidden" value="@Model.CalendarBlockId" id="calendar-block-id" />
<input type="hidden" value="@Model.PageId" id="page-id" />

<script type="module">
    import {setupLargeCalendar} from '/js/Calendar.js';
    setupLargeCalendar();
</script>

