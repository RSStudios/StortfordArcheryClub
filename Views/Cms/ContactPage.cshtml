@using StortfordArchers.Models
@model ContactPage
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="~/js/Contact.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />


<div class="container">

    <div class="row">
        <div class="col-sm-10 text-center">
            <h1>CONTACT</h1>
        </div>
    </div>
    <div style="float:left" class="medium-right-padding">
        <div class="row large-bottom-margin">
            <div class="col-sm-10 footer-title">
             <h3>   Stortford Archery Club </h3>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-10">
                Club meets at:
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">
                St Mary's Catholic School
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">
                Windhill
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">
                Bishop's Stortford
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">
                CM23 2NQ
            </div>
        </div>
        <div class="row medium-bottom-padding">
            <div class="col-sm-10">
                Please note this is NOT a postal address, but only where we shoot.
            </div>
        </div>
    </div>
    <div style="float:left;">

        <div class="mapouter">
            <div class="gmap_canvas">
                <iframe width="500" height="400" id="gmap_canvas" src="https://maps.google.com/maps?q=Windhill,%20Bishops%20Stortord,CM23%202NQ&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="5"></iframe>

                <style>
                    .mapouter {
                        position: relative;
                        text-align: right;
                        height: 400px;
                        width: 500px;
                    }</style>
                <style>
                    .gmap_canvas {
                        overflow: hidden;
                        background: none !important;
                        height: 400px;
                        width: 500px;
                    }</style>
            </div>
        </div>

    </div>
    <div class="clearfix"></div>
    <article class="get-in-touch">
    <div class= "row">
        <div class= "col-md-12">
    <form>
        <div class="form large-top-margin">
        <div class="row small-bottom-padding large-top-margin">
            <div class="col-lg-5">
                <div class="row">
                    <div class="col-md-2 small-bottom-padding">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Name" style="width:250px;" class="form-item" placeholder="Enter name" />
                    </div>
                </div>
                <div class="row small-bottom-padding">
                    <div class="col-md-2">
                        <label asp-for="Phone"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Phone" class= "form-item" style="width:250px;" placeholder="Enter phone number" />
                    </div>
                </div>
                <div class="row small-bottom-padding">
                    <div class="col-md-2">
                        <label asp-for="Subject"></label>
                    </div>
                    <div class="col-md-8 small-bottom-padding">
                        <input asp-for="Subject"  class= "form-item" style="width:250px;" placeholder="Enter a subject" />
                    </div>
                </div>
                <div class="row small-bottom-padding">
                    <div class="col-md-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Email"  class= "form-item" style="width:250px;" placeholder="Enter an email address" />
                    </div>
                </div>
            </div>

            <div class="col-lg-7">
                <div class="row small-bottom-padding">
                    <div class="col-md-2  col-sm-12">
                        <label asp-for="Message"></label>
                    </div>
                    <div class="col-md-10 col-sm-12">
                        <textarea asp-for="Message"  class= "form-item" style="min-width:350px;height:150px;" placeholder="Enter a message"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 offset-md-9">
              @*  <button class="button" asp-controller="Cms" asp-action="Contact">Submit</button>*@
                 <input id="send-the-message" type="submit" value="Send Message"  class="send-message button">
            </div>
        </div>
    </div>
    </form>
    </div>
    </div>
    </article>

    <div class="row small-bottom-padding">
        <div class="col-md-10" style="color: #006400; margin-top:10px;">
            In contacting the club you agree to the terms of the clubs GDPR policy.
            A link to which can be found at the bottom of this page.
        </div>
    </div>
    <div class="row small-bottom-padding">
        <div class="col-md-10">
            @Model.Response
        </div>

    </div>
</div>
<script>
    $(document).ready(function() {
        window.StortfordArchers.Contact.init();
});
</script>
